---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Hero/Header.astro';
import Biobtns from '../components/Hero/Biobtns/Biobtns.astro';
import Bio from '../components/Hero/Bio/Bio.astro';
import Card from '../components/Proyects/Card.astro';
import SkillsCard from '../components/SkillCards/SkillsCard.astro'
import Form from '../components/Footer/Form.astro';

import {proyectStructure} from '../components/Proyects/cardsContent'
import {stack, currentLearning} from '../components/SkillCards/techsContent'


const proyects = proyectStructure
const techsStack = stack
const currentLearningStack = currentLearning
---

<Layout title="rendn portfolio">
	<Header/>
	<main>
		<div class="resume">
			<Biobtns value="Descargar CV"/>
			<Bio content=
				"Bienvenido a mi portafolio! soy Miguel Rendón, mejor conocido como 'micky'. Soy un desarrollador web Front end con más de dos años de experiencia me especializo en diseño y desarrollo web, Posicionamiento web(SEO) y marketing digital. Soy un chico Colombiano 🇨🇴 que viaja por el mundo, apasionado por la fotografía, el diseño y los deportes. En mis tiempos libres traduzco articulos de programación al español para FreeCodeCamp."
			/>
			<section role="list" class="link-card-grid" title="portfolio section">
				<!--proyects -->
				{
					proyects.map(
						({title, content, imgAlt, bkgImage, iconImage, buttons}) => (
							<Card
								title={title}
								content={content}
								altImg={imgAlt}
								background={bkgImage}
								icon={iconImage}
								demoUrl={buttons.demoURl}
								repoUrl={buttons.repoURl}
							/>
						)
					)
				}
			</section>
			<article class="technologies">
				{
					techsStack?.map(({name, url}) => {
						<SkillsCard
							title='Tecnologías'
							icon={url}
							name={name}
						/>
					})
				}
				{
					currentLearningStack?.map(({name, url}) => {
						<SkillsCard
						title='Actualmente aprendiendo'
						icon={url}
						name={name}
						/>
					})
				}
			</article>
			<article class="academic">
				{
					// academics?.map(({name, url}) => {
					// 	<SkillsCard
					// 		title='Tecnologías'
					// 		icon={url}
					// 		name={name}
					// 	/>
					// })
				}
			</article>
		</div>
	</main>
	<footer>
		<Form 
			title='Ponte en contacto'
			name='Nombre'
			email='email'
			textarea='Deja tu mensaje'
			submit='Envíar'
		/>
	</footer>
</Layout>

<style>
	main, footer {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
