---
interface Props {
	title: string;
	name: string;
	email: string;
	textarea: string;
    submit: string;
}
const { title, name, email, textarea, submit } = Astro.props;
---

<section class="grid place-items-center mt-8 md:mt-16 py-4 px-8 card md:max-w-1/2">
    <h1 class="form-title my-8 mx-4 text-balance text-center md:text-lg md:font-medium">{title}</h1>
      <form method="post" name="f-contact" action="./src/html/formReceived.html" data-netlify="true">

         <label for="name"></label>
         <input id="name" class="mt-4 px-1 py-3 w-full rounded border-none text-sm shadow-[0_0_2px_0] caret-blue-500" type="text" name="Name" placeholder={name} required>

         <label for="email"></label>
         <input id="email" class="mt-4 px-1 py-3 w-full rounded border-none text-sm shadow-[0_0_2px_0] caret-blue-500" type="email" name="Email" placeholder={email} required>

         <label for="textarea"></label>
         <textarea id="textarea" class="mt-4 px-1 py-3 w-full rounded border-none text-sm shadow-[0_0_2px_0] caret-blue-500" rows="5" name="Content" placeholder={textarea} required></textarea>

         <div class="submit-btn-container flex items-center mt-4 justify-end">
            <input id="title-link" class="title-link text-center submit px-3 w-1/3 sm:px-5 h-12 flex items-center gap-2 bg-blue-500 opacity-80 rounded-md font-bold text-sm md:text-base md:hover:opacity-100 transition md:cursor-pointer" type="button" value={submit}>
         </div>
      </form>
</section>