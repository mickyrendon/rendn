---
import MainButton from './MainButton.astro';
import SecButton from './SecButton.astro';

// Typescript
interface Props {
	title: string;
	content: string;
      altImg: string;
      background:string;
      icon:string;
      demoUrl:string;
      repoUrl:string;
}
const { title, content, altImg, background, icon, demoUrl, repoUrl } = Astro.props;

---

<div class="group relative block bg-black overflow-hidden rounded-lg h-80 sm:max-h-96 md:group-hover:max-h-auto">
      <img
      src={background}
      class="h-full w-full absolute inset-0 object-cover bg-center opacity-25 transition-opacity group-hover:opacity-50"
      />

      <div class="relative h-full w-full p-4 sm:p-6 lg:p-8">
            <h1 class=" text-lg font-semibold uppercase tracking-widest text-pink-500">
      <!-- TODO, agregar el icono -->
                  <slot 
                  name="before"
                  title={altImg}
                  />
                  {title}
            </h1>
            <div class="w-full h-full">
                  <div
                  class="w-full h-full grid grid-rows-2 gap-x-0.5 md:translate-y-8 md:transform md:opacity-0 md:transition-all md:group-hover:translate-y-0 md:group-hover:opacity-100"
                  >
                  <p class="text-sm text-white">
                  {content}
                  </p>
                  <div class="px-4 flex justify-between items-center gap-1 absolute bottom-4 left-0 w-full max-h-14 sm:mt-14 sm:justify-center md:justify-end lg:mt-24">
                  <MainButton 
                        url={demoUrl}
                        btnName='Demo' >
                        <svg
                        slot="after"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="#9e9e9e"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round">
